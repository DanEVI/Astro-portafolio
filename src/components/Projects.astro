---
const PROJECTS = [
    {
        title: "Proyecto 1",
        description: "DescripcioÌn del proyecto 1",
        link: "https://proyecto1.com",
        github: "https://github.com/proyecto1",
        image: "proyecto1.png",
        tags: ["HTML", "CSS", "JavaScript"],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article>
            <h3>{title}</h3>
