---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import GitHub from "../icons/GitHub.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Daniel Villavicencio | Diseño y desarrollo web">
	<main>
		<SectionContainer id="top" class="py-44 pb-22">
			<img class="w-72 h-72" src="persona-dev.png" alt="Daniel" />
			<div class="flex flex-col justify-center">
				<h1
					class="text-white text-5xl font-bold flex justify-center flex-row mb-4"
				>
					Hola, soy Daniel <div class="flex items-center ps-2">
						<Badge>Disponible para trabajar</Badge>
					</div>
				</h1>
				<p class="text-white text-xl">
					Técnico en Diseño y Desarrollador web <br/>Orientado al trabajo colaborativo. Expecializado en desarrollar aplicaciones web.
				</p>
				<div class="flex flex-row">
					<nav class="flex gap-x-4">
						<SocialPill>
							<LinkedIn
								href="https://www.linkedin.com/in/danielvill/"
								class="w-6 h-6"
							/>
							LinkedIn
						</SocialPill>
						<SocialPill>
							<GitHub
								href="https://github.com/DanEVI"
								class="w-6 h-6"
							/>
							Github
						</SocialPill>
					</nav>
				</div>
			</div>
		</SectionContainer>
		<SectionContainer class="flex-col">
			<h2 class="text-4xl font-semibold mb-10">Experiencia Laboral</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos" class="flex-col py-44 pb-22">
			<h2
				class="text-4xl font-semibold mb-10"
			>
				Proyectos
			</h2>
			<Projects/>
		</SectionContainer>
	</main>
</Layout>
